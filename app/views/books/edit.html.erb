
<h2>編集画面</h2>
<% if @book.errors.any? %>
  <%= @book.errors.count %>
  <% flash[:alert]%> errors prohibited this book from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    <% end %>


<%= form_with model: @book do |f| %>
<br>
  <h4>本のタイトル</h4>
  <%= f.text_field :title %>
<br>
<br>
  <h4>感想</h4>
  <%= f.text_area :body %>
<br>
  <%= f.submit 'Update Book' %>
  <% end %>
  <br>
  <%= link_to "Show", book_path(@book) %>
  <%= link_to "Back", "/books" %>


