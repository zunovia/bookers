<h2>編集画面</h2>

<%= form_with model: @book, url: book_path(@book.id), method: :patch do |f| %>
<br>
  <h4>本のタイトル</h4>
  <%= f.text_field :title %>
<br>
<br>
  <h4>感想</h4>
  <%= f.text_area :body %>
<br>
  <%= f.submit 'Update' %>
  <br>
  <%= link_to "back", "/books" %>
  <%= link_to "show", book_path(@book.id) %>

<% end %>