
<h2>Books</h2>
<br>
<table>
  <thead>
   <tr>
    <th class="a">本のタイトル</th>
    <th class="b">感想</th>
    <th class="c"></th>
    <th class="d"></th>
    <th class="e"></th>

  </tr>
  </thead>
    <tbody>
        <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td><%=link_to "Show",book_path(book.id) %></td>
        <td><%=link_to "Edit",edit_book_path(book.id) %></td>
        <td><%=link_to "Destroy",book_path(book.id), method: :delete, "data-confirm" => "本当に削除しますか？"%></td>
      </tr>
     <% end %>
    </tbody>

</table>

<br>
<br>

<h3>New Book</h3>
<br>
<% if @book.errors.any? %>
  <%= @book.errors.count %> errors below, an unexpected error has occurred '
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
<% end %>
  </ul>
<% end %>

<%= form_with model: @book, url: '/books', method: :post do |f| %>
  <h4>本のタイトル</h4>
  <%= f.text_field :title %>
  <br><br>
  <h4>感想</h4>
  <%= f.text_area :body %>
  <br>
  <%= f.submit 'Create Book' %>
<% end %>



