<h3>新規投稿</h3>
<br>
<% if @book.errors.any? %>
  <%= @book.errors.count %>
  <% flash[:alert]%> errors prohibited this book from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<br>
<%= form_with model: @book, url: '/books', method: :post do |f| %>
<br>
  <h4>本のタイトル</h4>
  <%= f.text_field :title %>
<br>
  <h4>感想</h4>
  <%= f.text_area :body %>
<br>
  <%= f.submit 'Create Book' %>
  <br>
  <%= link_to "Edit", "/edit" %>
  <%= link_to "Back", "/books" %>
<% end %>